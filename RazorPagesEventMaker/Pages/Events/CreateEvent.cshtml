@page
@model RazorPagesEventMaker.Pages.events.CreateEventModel
@{
    ViewData["Titel"] = "Create Event";
}
<h1>Create Event</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Event.Name" class="custom-control-label"></label>
                <input asp-for="@Model.Event.Name" class="form-control" />
                <span asp-validation-for="Event.Name" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.Description" class="custom-control-label"></label>
                <input asp-for="@Model.Event.Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.City" class="custom-control-label"></label>
                <input asp-for="@Model.Event.City" class="form-control" />
                <span asp-validation-for="Event.City" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.DateTime" class="custom-control-label"></label>
                <input asp-for="@Model.Event.DateTime" class="form-control" />
                <span asp-validation-for="Event.DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="submit" value="create" class="btn btn-primary" />
            </div>
            <div>
                <a asp-page="Index">Back to list</a>
            </div>
        </form>
    </div>
</div>
>